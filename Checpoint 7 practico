function operacion(a, b, c, d) {
    suma_1 = a + b
    suma_2 = c + d
    multi = suma_1 * suma_2
    if (multi > 50) {
        console.log("¡El número es mayor que 50!")
    } else console.log("¡El número es menor que 50!")

}

console.log(suma_1)
console.log(suma_2)
console.log(multi)

console.log(operacion(1, 2, 3, 4))
